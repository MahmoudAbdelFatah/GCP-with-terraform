pipeline {
    agent {
        kubernetes {
        yaml '''
            apiVersion: v1
            kind: Pod
            spec:
            containers:
            -   name: docker
                image: docker:latest
                command:
                - cat
                tty: true
                volumeMounts:
                - mountPath: /var/run/docker.sock
                name: docker-sock
            volumes:
            -   name: docker-sock
                hostPath:
                path: /var/run/docker.sock    
            '''
        }
    }
    stages {
        stage('pull repo') {
            steps {
                echo 'pulling docker image...'
                git 'https://github.com/MahmoudAbdelFatah/DevOps-Challenge-Demo-Code.git'
            }
        }
        stage('build image') {
            steps{
                echo 'building docker image...'
                withCredentials([
                    usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'USER', passwordVariable: 'PWD')
                ]) {
                    sh 'docker build -t mahmoudteha/nodejs:3.0 .'
                    sh "echo $PWD | docker login -u $USER --password-stdin"
                    sh 'docker push mahmoudteha/nodejs:3.0'
                }
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying the application on default namespace'
                sh 'docker run -d -p 8090:8080 mahmoudteha/nodejs:1.0'
            }
        }
        
    }
}